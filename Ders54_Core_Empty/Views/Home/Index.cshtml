@model IEnumerable<Ders54_Core_Empty.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>

    <a asp-action="Create" class="btn btn-success">New Student</a>
    @Html.AntiForgeryToken()

</p>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.StudentNumber)
            </th>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th style="background-color:slategray;">
                @Html.DisplayNameFor(model => model.PasswordAgain)
            </th>

            <th style="background-color:slategray;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasswordAgain)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentID" class="btn btn-primary">EDIT</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentID" class="btn btn-secondary">DETAILS</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentID" class="btn btn-danger">DELETE</a>
                </td>
            </tr>
        }
    </tbody>
</table>

